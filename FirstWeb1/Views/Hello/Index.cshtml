<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Hello @ViewBag.Name from the View file</h1>
    @{
        for(int i = 0; i < ViewBag.Number; i++)
        {
            <p>The number is @i</p>
        }
    }
    <form action="process" method="post">
        <label for="FavoriteAnimal">Enter your facorite animal</label>
        <input type="text" name="FavoriteAnimal" id="FavoriteAnimal">
        <button>Submit</button>
    </form>
    @{
        if(ViewBag.Error == null)
        {
            <p></p>
        }
        else
        {
            <p>@ViewBag.Error</p>
        }
    }
</body>
</html>