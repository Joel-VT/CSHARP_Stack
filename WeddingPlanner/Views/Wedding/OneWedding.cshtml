@{
    ViewData["Title"] = "Wedding Page";
}

@model Wedding

<h1 class="mb-5">@Model.WedderOne & @Model.WedderTwo's wedding</h1>
<p class="mb-3 fw-bold">Date: @Model.Date.ToString("MMM dd, yyyy")</p>
<p class="mb-1 fw-bold">Guests:</p>
<div class="border border-dark p-3 w-25 text-center">
    @foreach (Reservation r in @Model.RSVPedGuests)
    {
        <p>@r.User.FirstName @r.User.LastName</p>
    }
</div>