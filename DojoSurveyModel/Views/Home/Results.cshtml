@model Form

@{
    ViewData["Title"] = "Results Page";
}

<div class="p-3 border border-dark w-50 mx-auto my-3">
    <h1><u>Submitted Info</u></h1>
    <div class="d-flex align-items-center mb-3">
        <p class="w-25">Name:</p>
        <p>@Model.Name</p>
    </div>
    <div class="d-flex align-items-center mb-3">
        <p class="w-25">Dojo Location:</p>
        <p>@Model.DojoLocation</p>
    </div>
    <div class="d-flex align-items-center mb-3">
        <p class="w-25">Favorite Language:</p>
        <p>@Model.FavoriteLanguage</p>
    </div>
    <div class="d-flex align-items-center mb-3">
        <p class="w-25">Comment:</p>
        @{
            if(Model.Comments == null)
            {
                <p class="text-secondary">No Comments</p>
            }
            else
            {
                <p>@Model.Comments</p>
            }
        }
    </div>
    <a href="/" class="btn btn-primary">Go Back</a>
</div>