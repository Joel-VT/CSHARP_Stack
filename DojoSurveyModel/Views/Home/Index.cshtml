@{
    ViewData["Title"] = "Form Page";
}

@model Form
<div class="text-center">
    <div class="p-3 border border-dark w-50 mx-auto my-3 ">
        <form asp-action="Process" asp-controller="Home" method="post">
            <div class="d-flex align-items-center mb-3">
                <div class="w-25">
                    <label asp-for="Name" class="col-form-label">Your Name</label>
                </div>
                <div>
                    <input asp-for="Name" class="form-control">
                </div>
                <span asp-validation-for="Name" class="d-block"></span>
            </div>
            <div class="d-flex align-items-center mb-3">
                <div class="w-25">
                    <label asp-for="DOB" class="col-form-label">Date of Birth</label>
                </div>
                <div>
                    <input asp-for="DOB" class="form-control" placeholder="mm/dd/yyyy">
                </div>
                <span asp-validation-for="DOB" class="ps-2"></span>
            </div>
            <div class="d-flex align-items-center mb-3">
                <div class="w-25">
                    <label asp-for="DojoLocation" class="col-form-label">Dojo Location</label>
                </div>
                <div>
                    <select asp-for="DojoLocation" class="form-select">
                        <option selected disabled>Choose a language</option>
                        <option value="San Jose">San Jose</option>
                        <option value="New York">New York</option>
                        <option value="DC">DC</option>
                    </select>
                </div>
                <span asp-validation-for="DojoLocation"></span>
            </div>
            <div class="d-flex align-items-center mb-3">
                <div class="w-25">
                    <label asp-for="FavoriteLanguage" class="col-form-label">Favorite Language</label>
                </div>
                <div>
                    <select asp-for="FavoriteLanguage" class="form-select">
                        <option selected disabled>Choose a language</option>
                        <option value="C#">C#</option>
                        <option value="Java">Java</option>
                        <option value="Python">Python</option>
                        <option value="JavaScript">JavaScript</option>
                    </select>
                </div>
                <span asp-validation-for="FavoriteLanguage"></span>
            </div>
            <div class="d-flex align-items-center mb-3">
                <div class="w-25">
                    <label asp-for="Comments" class="col-form-label"></label>
                </div>
                <div>
                    <textarea asp-for="Comments" class="form-control"></textarea>
                </div>
                <span asp-validation-for="Comments"></span>
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
