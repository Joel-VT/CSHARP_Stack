@{
    ViewData["Title"] = "Form Page";
}

@model Form
<div class="text-center">
    <div class="p-3 border border-dark w-50 mx-auto my-3 ">
        <form asp-action="Process" asp-controller="Home" method="post">
            <div class="d-flex align-items-center mb-3">
                <div class="w-25">
                    <label asp-for="Name" class="col-form-label">Your Name</label>
                </div>
                <div>
                    <input asp-for="Name" class="form-control">
                </div>
                <span asp-validation-for="Name" class="d-block"></span>
            </div>
            <div class="d-flex align-items-center mb-3">
                <div class="w-25">
                    <label asp-for="Email" class="col-form-label">Email Address</label>
                </div>
                <div>
                    <input asp-for="Email" class="form-control">
                </div>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="d-flex align-items-center mb-3">
                <div class="w-25">
                    <label asp-for="DOB" class="col-form-label">Date Of Birth</label>
                </div>
                <div>
                    <input asp-for="DOB" class="form-control">
                </div>
                <span asp-validation-for="DOB"></span>
            </div>
            <div class="d-flex align-items-center mb-3">
                <div class="w-25">
                    <label asp-for="Password" class="col-form-label"></label>
                </div>
                <div>
                    <input asp-for="Password" class="form-control">
                </div>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="d-flex align-items-center mb-3">
                <div class="w-25">
                    <label asp-for="OddNumber" class="col-form-label">Favorite Odd Number</label>
                </div>
                <div>
                    <input asp-for="OddNumber" class="form-control">
                </div>
                <span asp-validation-for="OddNumber"></span>
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

