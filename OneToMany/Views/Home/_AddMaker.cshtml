                <label asp-for="Name"></label>
                <input asp-for="Name">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Country"></label>
                <input asp-for="Country">
                <span asp-validation-for="Country"></span>
